<p id="notice"><%= notice %></p>

<p>
  <strong>Proveedor:</strong>
  <%= @ingreso.proveedor %>
</p>

<p>
  <strong>Numero Factura:</strong>
  <%= @ingreso.numero_factura %>
</p>

<p>
  <strong>Fecha:</strong>
  <%= @ingreso.fecha %>
</p>

<p>
  <strong>Elementos agregados:</strong>
  <table>
	  <thead>
	    <tr>
	      <th>Repuesto</th>
	      <th>Cantidad</th>
	      <th>Precio unitario</th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @ingreso.repuestos.each do |tupla| %>
	    	<% nombre = Repuesto.find(tupla[0].to_i).articulo %>
	      <tr>
	        <td><%= nombre %></td>
	        <td><%= tupla[1].to_f %></td>
	        <td><%= tupla[2].to_f %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
</p>

<p>
  <strong>Total:</strong>
  <%= @ingreso.total %>
</p>

<%= link_to 'Edit', edit_ingreso_path(@ingreso) %> |
<%= link_to 'Back', ingresos_path %>
