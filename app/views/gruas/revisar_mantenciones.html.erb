<h1> Gruas que necesitan mantencion </h1>

<table class="table">
	<thead>
		<th>Numero de serie</th>
		<th>Horometro</th>
		<th>Secuencia</th>
		<th>Horas faltantes</th>
		<th>Horas teoricas de mantencion</th>
	</thead>
	<tbody>
		<% @gruas.each do |grua| %>
			<% grua.dicc_a_realizar.each do |key, value| %>
				<tr>
					<td><%= grua.numero_serie %></td>
					<td><%= grua.horometro %></td>
					<td>Cada <%= key %> horas</td>
          			<% if value[0] <= 0 %>
            			<td class="text-danger"><%= value[0] %> horas</td>
          			<% else %>
            			<td><%= value[0] %> horas</td>
          			<% end %>
          			<td><%= value[1] %> horas</td>
          			<td><%= link_to "Realizada", mantencion_realizada_path(grua_id: grua.id, secuencia: key) %></td>
				</tr>
			<% end %>
		<% end %>
	</tbody>
	
</table>