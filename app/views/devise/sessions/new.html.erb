<h2>Ingresar</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", label: "ContraseÃ±a" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me, label: "Recordarme" %>
    </div>
  <% end -%>
  <br>

  <div class="actions">
    <%= f.submit "Ingresar" %>
  </div>
<% end %>