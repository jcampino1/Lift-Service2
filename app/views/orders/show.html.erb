<p id="notice"><%= notice %></p>

<p>
  <strong>Grua:</strong>
  <%= @order.grua_id %>
</p>

<p>
  <strong>Numero:</strong>
  <%= @order.numero %>
</p>

<p>
  <strong>Cliente:</strong>
  <%= @order.cliente %>
</p>

<p>
  <strong>Fecha:</strong>
  <%= @order.fecha %>
</p>

<p>
  <strong>Hora entrada:</strong>
  <%= @order.hora_entrada %>
</p>

<p>
  <strong>Hora salida:</strong>
  <%= @order.hora_salida %>
</p>

<p>
  <strong>Horometro:</strong>
  <%= @order.horometro %>
</p>

<p>
  <strong>Preventiva:</strong>
  <%= @order.preventiva %>
</p>

<p>
  <strong>Estado maquina:</strong>
  <%= @order.estado_maquina %>
</p>

<p>
  <strong>Trabajos realizados:</strong>
  <% @order.trabajos_realizados.each do |trabajo| %>
    <p>- <%= trabajo %><p>
  <%end%> 
</p>

<p>
  <strong>Repuestos usados:</strong>
  <table>
    <thead>
      <tr>
        <th>Repuesto</th>
        <th>Cantidad</th>
      </tr>
    </thead>

    <tbody>
      <% @order.repuestos_usados.each do |tupla| %>
        <% nombre = Repuesto.find(tupla[0].to_i).articulo %>
        <tr>
          <td><%= nombre %></td>
          <td><%= tupla[1].to_f %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</p>

<p>
  <strong>Equipo:</strong>
  <%= @order.equipo %>
</p>

<p>
  <strong>Total:</strong>
  <%= @order.total %>
</p>

<%= link_to 'Editar', edit_grua_order_path(id: @order, grua_id: @grua) %> |
<%= link_to 'Volver', grua_orders_path(grua_id: @grua) %>
