<h1>Proveedores</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Codigo</th>
      <th>Categoria</th>
      <th>Correo</th>
      <th>Telefono</th>
      <th>Direccion</th>
      <th>Credito</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.nombre %></td>
        <td><%= supplier.codigo %></td>
        <td><%= supplier.categoria %></td>
        <td><%= supplier.correo %></td>
        <td><%= supplier.telefono %></td>
        <td><%= supplier.direccion %></td>
        <td><%= supplier.credito %></td>
        <td><%= link_to 'Show', supplier %></td>
        <td><%= link_to 'Edit', edit_supplier_path(supplier) %></td>
        <td><%= link_to 'Destroy', supplier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

