<center><h1>Proveedores</h1></center>
<br><br>

<%= search_form_for @q, html: { class: "form-inline" } do |f| %>
  <%= f.search_field :nombre_cont, placeholder: "Buscar proveedor...", class: "form-control" %>
<%end%>

<br>

<div style="height:500px;overflow-y:scroll;;">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Código</th>
        <th>Categoria</th>
        <th>Correo</th>
        <th>Telefono</th>
        <th>Dirección</th>
        <th>Crédito</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @suppliers.each do |supplier| %>
        <tr>
          <td><%= supplier.nombre %></td>
          <td><%= supplier.codigo %></td>
          <td><%= supplier.categoria %></td>
          <td><%= supplier.correo %></td>
          <td><%= supplier.telefono %></td>
          <td><%= supplier.direccion %></td>
          <% if supplier.credito %>
            <td>Sí</td>
          <% else %>
            <td>No</td>
          <% end %>
          <td><%= link_to 'Mostrar', supplier %></td>
          <td><%= link_to 'Eliminar', supplier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<div class="jumbotron">
  <center><%= link_to 'Nuevo Proveedor', new_supplier_path, class: "btn btn-lg btn-primary", id:"link-b" %></center>
</div>
